        detector.addEventListener("onImageResultsSuccess", function (faces, image, timestamp) {
            if (faces.length <= 0) {
                timer.pause();
                $("#notCenteredMessage").fadeIn(100);
            } else {
                $("#notCenteredMessage").fadeOut(100);
