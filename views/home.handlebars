        var isScanFinished = false;
        var ind = 0;
        function startQuiz() {
            $(".quizModal").fadeIn(200).css("display", "flex");
            $("#questionImg").attr("src", "../images/Racoons/" + quizRaccoons[ind].getSrc());
            $("#questionP").text(quizRaccoons[ind].getQuestion());
